---
import Layout from "@/layouts/Layout.astro";
import Wrapper from "@/components/Wrapper.astro"
import { getCollection } from "astro:content";

const epistolas = await getCollection("epistolas");
console.log(epistolas)
---

<Layout title="home">
	<Wrapper className="justify-center">
		<section aria-label="epistolas del mai">
			<div class="px-4 mx-auto max-w-screen-xl">
				<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
					{
						epistolas.map((epistola) => {
							const { slug, data } = epistola;
							const { title, author, img, description } = data;

							return (
								<article class="flex flex-col">
									<a href={`/epistola/${slug}`} class="mb-2">
										<img
											src={`src/assets/images/epistola1/${img}`}
											alt={title}
											class="w-full rounded-lg transition hover:scale-105"
										/>
									</a>
									<div class="flex flex-col justify-center">
										<h3 class="font-serif tracking-wide">
											{title}
										</h3>
										<p class="text-xs">{description}</p>
									</div>
								</article>
							);
						})
					}
				</div>
			</div>
		</section>
	</Wrapper>
</Layout>
