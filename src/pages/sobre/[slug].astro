---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import { getCollection, render } from "astro:content";
import Wrapper from "@/components/Wrapper.astro";
import { imageConfig } from "astro:assets";

export async function getStaticPaths() {
    const sobres = await getCollection("sobres");

    return sobres.map((sobre) => ({
        params: { slug: sobre.slug },
        props: { sobre },
    }));
}

const { sobre } = Astro.props;
const { data } = sobre;
const { title, author, img, description } = data;

const { Content } = await render(sobre);

const imageFiles = await Astro.glob("@/assets/images/**/*");
---

