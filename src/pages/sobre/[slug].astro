    <Wrapper className="flex-col lg:flex-row gap-10">
        <aside class="flex-1 flex flex-col">
            {
                imageFiles.map((img) => (
                    <Image
                        src={img.default}
                        alt="Photo of a pizza"
                        class="mb-3 w-full rounded"
                    />
                ))
            }
            <!-- <img
                src={`/src/assets/images/2017-03-11/${img}`}
                alt={title}
                class="rounded w-full h-auto object-contain"
            /> -->
        </aside>
        <main class="flex-1 py-4">
            <h1 class="font-serif tracking-wide mb-6">{title}</h1>
            <div class="prose">
                <Content />
            </div>
        </main>
    </Wrapper>
</Layout>
