---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import { getCollection, render } from "astro:content";
import Wrapper from "@/components/Wrapper.astro";
import { imageConfig } from "astro:assets";

export async function getStaticPaths() {
    const epistolas = await getCollection("epistolas");

    return epistolas.map((epistola) => ({
        params: { slug: epistola.slug },
        props: { epistola },
    }));
}

const { epistola } = Astro.props;
const { data } = epistola;
const { title, author, date, img, description } = data;

const { Content } = await render(epistola);

const imageFiles = await Astro.glob("@/assets/images/**/*");
