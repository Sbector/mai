---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import { getCollection, render } from "astro:content";
import Wrapper from "@/components/Wrapper.astro";

export async function getStaticPaths() {
    const epistolas = await getCollection("epistolas");

    return epistolas.map((epistola) => ({
        params: { slug: epistola.slug },
        props: { epistola },
    }));
}

const { epistola } = Astro.props;
const { data, slug } = epistola;
const { title, author, date, img, description } = data;

const { Content } = await render(epistola);

// Asegúrate de que estas rutas y nombres de archivo tengan extensión
const images = import.meta.glob(
    "/src/assets/images/**/*.{webp,jpg,jpeg,png}",
    { eager: true, import: "default" },
);

const imageKey = `/src/assets/images/${slug}/${img}`;
const imageSrc = images[imageKey];

if (!imageSrc) {
    throw new Error(
        `No se encontró la imagen en la ruta ${imageKey}. Verifica que el archivo exista y esté dentro de src/assets/images.`
    );
}
---
<Layout title={`${title} ┼ mai`}>
    <Wrapper className="flex-col lg:flex-row gap-10">
        <aside class="flex-1 flex flex-col">
            <Image
                src={imageSrc}
                alt={title}
                class="rounded w-full h-auto object-contain"
            />
        </aside>
        <main class="flex-1 py-4">
            <h1 class="font-serif tracking-wide mb-2">{title}</h1>
            <p class="text-xs mb-6">
                <time datetime={date?.toISOString()}>
                    {date?.toLocaleDateString("es", {
                        dateStyle: "medium",
                        timeZone: "UTC",
                    })}
                </time>
            </p>
            <div class="prose">
                <Content />
            </div>
        </main>
    </Wrapper>
</Layout>
