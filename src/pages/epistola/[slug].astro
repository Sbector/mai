---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import { getCollection, render } from "astro:content";
import Wrapper from "@/components/Wrapper.astro";
import type { ImageMetadata } from "astro:content";

export async function getStaticPaths() {
    const epistolas = await getCollection("epistolas");

    return epistolas.map((epistola) => ({
        params: { slug: epistola.slug },
        props: { epistola },
    }));
}

const { epistola } = Astro.props;
const { data } = epistola;
const { title, author, date, img, description } = data;

const { Content } = await render(epistola);
const images = import.meta.glob(
    "@/assets/images/epistola1/*.{webp,jpg,jpeg,png}",
    { eager: true, import: "default" },
);

const imageSrc = images[`/src/assets/images/epistola1/${img}`] as ImageMetadata;
---

<Layout title={`${title} â”¼ mai`}>
    <Wrapper className="flex-col lg:flex-row gap-10">
        <aside class="flex-1 flex flex-col">
            <Image
                src={imageSrc}
                alt={title}
                class="rounded w-full h-auto object-contain"
            />
        </aside>
        <main class="flex-1 py-4">
            <h1 class="font-serif tracking-wide mb-2">{title}</h1>
            <p class="text-xs mb-6">
                <time datetime={date?.toISOString()}
                    >{
                        date?.toLocaleDateString("es", {
                            dateStyle: "medium",
                            timeZone: "UTC",
                        })
                    }</time
                >
            </p>
            <div class="prose">
                <Content />
            </div>
        </main>
    </Wrapper>
</Layout>
